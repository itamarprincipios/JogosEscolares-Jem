# Sistema JEM - Apache Configuration
# Proteção de segurança para produção

# Proteger arquivos de configuração
<Files "config.php">
    Require all denied
</Files>

<Files "config.production.php">
    Require all denied
</Files>

# Proteger arquivos SQL
<FilesMatch "\.(sql|db)$">
    Require all denied
</FilesMatch>

# Proteger arquivos de teste e debug
<FilesMatch "^(test_|debug_|update_)">
    Require all denied
</FilesMatch>

# Proteger diretório .git
<DirectoryMatch "^\.|\/\.">
    Require all denied
</DirectoryMatch>

# Configurações PHP
# Configurações PHP (Comentado para evitar Erro 500 na HostGator)
# Para alterar estes valores na HostGator, use o "MultiPHP INI Editor" no cPanel
# <IfModule mod_php.c>
#     php_value upload_max_filesize 5M
#     php_value post_max_size 5M
#     php_value max_execution_time 300
#     php_value max_input_time 300
#     php_value memory_limit 128M
# </IfModule>

# Habilitar compressão (melhor performance)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Redirecionamento HTTPS (descomente quando tiver SSL configurado)
# <IfModule mod_rewrite.c>
#     RewriteEngine On
#     RewriteCond %{HTTPS} off
#     RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# Prevenir listagem de diretórios
Options -Indexes

# Proteção contra clickjacking
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
